{% extends "SygeforTaxonomyBundle:Taxonomy:layout.html.twig" %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="{{ path('core.index') }}">Accueil</a></li>
        <li><a href="#">Administration</a></li>
        <li><a href="{{ path('taxonomy.index') }}">Vocabulaires</a></li>
        <li><a href="{{ path('taxonomy.view',{'id':id}) }}">{{ vocabulary.vocabularyName }}</a></li>
        <li><a href="#">{{ term.name }}</a></li>
        <li class="active"><a href="#">Supprimer</a></li>
    </ol>
{% endblock %}

{% block subcontent %}
    <h1>Etes-vous certain de vouloir supprimer le terme <em>{{ term.name }}</em> du vocabulaire <em>{{ vocabulary.vocabularyName }}</em> ?</h1>

    {{ form_start(form) }}
    {% if count != 0 %}
    <span>{{ count }} entités sont associées au terme. Choisissez un nouveau terme auquel seront associées ces entités :</span>
    {% endif %}
    {% for child in form.children%}
        {{ form_row(child) }}
    {% endfor %}
        <a class="btn btn-default" href="#" onclick="history.back(); return false;" role="button">Annuler</a>
        <input type="submit" class="btn btn-danger" value="Supprimer le terme"/>
    {{ form_end(form) }}
{% endblock %}
