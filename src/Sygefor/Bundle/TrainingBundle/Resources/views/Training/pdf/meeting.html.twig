<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ training.name }}</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
    <link href="{{ link }}\build\styles.css" rel="stylesheet" type='text/css'>
</head>
<body style="background-color: white">
    <div ng-if="training" class="row">
        <div class="col-md-9">
                <div class="pre-title">{{ training.typeLabel }} n°{{ training.id }} -  {{ training.organization.name }}</div>
                <h2><span>{{ training.name }}</span></h2>

                <div class="infos">
                    <ul class="summary">
                        <li><label>Thème : </label> <span>{{ training.theme.name }}</span></li>
                        <li><label> Type</label>
                        {% if training.category is not null %}
                            <span>{{ training.category.name }}</span>
                        {% endif %}
                        </li>
                        <li><label> National</label> <span>{{ training.national ? 'Oui' : 'Non' }}</span></li>
                        <li><label> Partenaires</label> <span> {{ training.partners }}</span></li>
                        <li><label> Tarifs</label><span> {{ training.prices }}</span></li>
                        <li><label> Statut</label>
                        {% if training.session is not null %}
                            <span> {{ training.session.displayOnline ? 'En ligne' : 'Hors ligne' }}</span>
                        {% endif %}
                        </li>
                    </ul>
                </div>

                <h3><span>Programme</span></h3>
                <p><span>{{ training.program|nl2br }}</span></p>

                <h3><span>Informations</span></h3>
                {% if training.session is not null %}
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="summary">
                                <li><label> Date</label> <span>{{ training.session.dateBegin|date('d/m/Y') }}</span></li>
                                <li><label> Date limite d'inscription</label> <span>{{ training.session.limitRegistrationDate|date('d/m/Y') }}</span></li>
                                <li><label> Lieu</label> <span>{{ training.session.place }}</span></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="summary">
                                <li><label> Places disponibles</label> <span>{{ training.session.maximumNumberOfRegistrations }}</span></li>
                                <li><label> Inscrits</label> <span>{{ training.session.numberOfRegistrations }}</span></li>
                                <li><label> Présents</label> <span>{{ training.session.numberOfParticipants }}</span></li>
                            </ul>
                        </div>
                    </div>
                    <h3><span>Coût</span></h3>
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="summary">
                                {% for key, cost in training.session.costs %}
                                    <li><label> {{ key }}</label> <span>{{ cost }}&euro;</span></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <h3><span>Commentaires</span></h3>
                    <p><span>{{ training.comments }}</span></p>
                {% else %}
                    <span>Pas de session.</span>
                {% endif %}
            </form>
        </div>
    </div>
</body>
</html>
