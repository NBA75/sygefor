{% block header %}
<!-- Fixed navbar -->
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header visible-xs">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('front.public.index') }}">
                <img src="{{ asset('img/logo.png') }}" height="30" alt="Logo">
            </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="hidden-xs">
                    <a class="navbar-brand" href="{{ path('front.public.index') }}">
                        <img src="{{ asset('img/logo.png') }}" height="30" alt="Logo">
                    </a>
                </li>
                <li><a href="{{ path('front.public.contact') }}" data-toggle="collapse" data-target=".navbar-collapse.in">Contact</a></li>
                <li><a href="{{ path('front.public.faq') }}" data-toggle="collapse" data-target=".navbar-collapse.in">FAQ</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {% if user.fullName is not defined %}
                    <li><a href="{{ path('front.public.login') }}" title="Accéder à votre espace">Espace personnel</a></li>
                {% else %}
                    <li><a href="{{ path('front.account') }}">Mon compte</a></li>
                    <li><a href="{{ path('front.account.logout') }}">Se déconnecter</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endblock header %}